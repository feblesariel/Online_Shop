<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Login</title>
    <meta name="author" content="bawebstudio.com" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link rel="stylesheet" href="/css/style.css"/>
  </head>
  <body class="bg-primary">
    <div class="container d-flex justify-content-center align-items-center vh-100">        
        <div class="d-flex flex-column justify-content-center align-items-center shadow" style="width: 500px; height: 600px; background-color: white;">
            <h2 class="text-center mb-5">Ingresá</h2>

            <form class="w-75" action="/users/login/" method="post">
              <!-- Email input -->
              <div class="form-outline mb-4">
                <input class="form-control" type="email" name="email" id="email" value="<%= locals.old && old.email ? old.email : "" %>"/>
                <label class="form-label small" for="email">Email</label>
              </div>
            
              <!-- Password input -->
              <div class="form-outline mb-4">
                <input class="form-control" type="password" name="password" id="password"/>
                <label class="form-label small" for="password">Contraseña</label>
              </div>

              <!-- Submit button -->
              <button type="submit" class="btn btn-primary btn-block mb-4">Ingrsar</button>

              <% if (locals.errors) { errors.forEach (error=> { %>
                <div class="small" style="color: red;"><%= error.msg %></div>
              <% })} %>

              <!-- Others -->
              <div class="row mt-5">
                <div class="col d-flex justify-content-between">
                    <div><a href="/">Volver</a></div>
                    <div><a href="/users/register">Registrate</a></div>
                </div>
              </div>

            </form>

        </div>
    </div>
  </body>
</html>